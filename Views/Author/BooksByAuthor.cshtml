@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Tổng kết sách theo tác giả";
}

<h1>Tổng kết sách theo tác giả</h1>
<table class="table">
    <thead>
        <tr>
            <th>Tác giả</th>
            <th>Số lượng sách</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AuthorName</td>
                <td>@item.BookCount</td>
            </tr>
        }
    </tbody>
</table>

